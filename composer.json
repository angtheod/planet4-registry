{
	"name": "greenpeace/planet4-registry",
	"version": "0.1.0",

	"require": {
		"composer/installers": "~1.0.0",
		"composer/satis": "dev-master"
	},

	"require-dev": {
		"squizlabs/php_codesniffer": "2.*"
	},

	"autoload": {
		"psr-4": {
			"Greenpeace\\Registry\\": "classes"
		}
	},

	"extra": {
		"satis-file": "satis.json",
		"satis-extended-file": "satis.extended.json",
		"packages-directory": "packages",
		"repositories-directory": "repositories"
	},

	"scripts": {
		"start": ["@build", "@server"],
		"server": "php -S 127.0.0.1:9292 -t public",
		"satis": "satis build satis.extended.json public/",
		"combine": "Greenpeace\\Registry\\SatisFileTask::extendSatisFile",
		"extract": "Greenpeace\\Registry\\PackageFileTask::extractFromRepositories",
		"build": ["@combine", "@satis"],
		"examples": [
			"rm -rf repositories",
			"git clone git@github.com:greenpeace/planet4-wordpress.git repositories/planet4-wordpress",
			"git clone git@github.com:greenpeace/planet4-plugin-mappress-google-maps-for-wordpress.git repositories/planet4-plugin-mappress-google-maps-for-wordpress",
			"git clone git@github.com:greenpeace/planet4-master-theme.git repositories/planet4-master-theme",
			"git clone git@github.com:greenpeace/planet4-child-theme.git repositories/planet4-child-theme"
		]
	}
}
